@model CapaDTO.Oferta

@{
    ViewBag.Title = "actualizarOferta";
}

<br />
<br />
<br />
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div class="container">
        <div class="row">
            <div class="col-lg-push-2 col-md-push-2 col-lg-8 col-md-8">
                <div class="panel panel-primary">
                    <div class="panel-heading">
                        <h2>Actualizar Oferta</h2>
                    </div>
                    <div class="panel-body">
                        <div class="form-horizontal">
                            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                            <!--ID Oferta-->
                            <div class="form-group col-lg-12 col-md-12">
                                @Html.LabelFor(model => model.IdOferta, htmlAttributes: new { @class = "control-label col-lg-3 col-md-3" })
                                <div class="col-lg-9 col-md-8">
                                    @Html.EditorFor(model => model.IdOferta, new { htmlAttributes = new { @class = "form-control" } })
                                    @Html.ValidationMessageFor(model => model.IdOferta, "", new { @class = "text-danger" })
                                </div>
                            </div>
                            <!--Nombre-->
                            <div class="form-group col-lg-12 col-md-12">
                                @Html.LabelFor(model => model.Nombre, htmlAttributes: new { @class = "control-label col-lg-3 col-md-3" })
                                <div class="col-lg-9 col-md-8">
                                    @Html.EditorFor(model => model.Nombre, new { htmlAttributes = new { @class = "form-control" } })
                                    @Html.ValidationMessageFor(model => model.Nombre, "", new { @class = "text-danger" })
                                </div>                                
                            </div>
                            <!--Descripcion-->
                            <div class="form-group col-lg-12 col-md-12">
                                @Html.LabelFor(model => model.Descripcion, htmlAttributes: new { @class = "control-label col-lg-3 col-md-3" })
                                <div class="col-lg-9 col-md-8">
                                    @Html.EditorFor(model => model.Descripcion, new { htmlAttributes = new { @class = "form-control" } })
                                    @Html.ValidationMessageFor(model => model.Descripcion, "", new { @class = "text-danger" })
                                </div>
                            </div>
                            <!--Precio Normal-->
                            <div class="form-group col-lg-12 col-md-12">
                                @Html.LabelFor(model => model.PrecioNormal, htmlAttributes: new { @class = "control-label col-lg-3 col-md-3" })
                                <div class="col-lg-9 col-md-8">
                                    @Html.EditorFor(model => model.PrecioNormal, new { htmlAttributes = new { @class = "form-control" } })
                                    @Html.ValidationMessageFor(model => model.PrecioNormal, "", new { @class = "text-danger" })
                                </div>
                            </div>
                            <!--Precio OFerta-->
                            <div class="form-group col-lg-12 col-md-12">
                                @Html.LabelFor(model => model.PrecioOfeta, htmlAttributes: new { @class = "control-label col-lg-3 col-md-3" })
                                <div class="col-lg-9 col-md-8">
                                    @Html.EditorFor(model => model.PrecioOfeta, new { htmlAttributes = new { @class = "form-control" } })
                                    @Html.ValidationMessageFor(model => model.PrecioOfeta, "", new { @class = "text-danger" })
                                </div>
                            </div>
                            <!--Min-->
                            <div class="form-group col-lg-12 col-md-12">
                                @Html.LabelFor(model => model.CantidadMin, htmlAttributes: new { @class = "control-label col-lg-3 col-md-3" })
                                <div class="col-lg-9 col-md-8">
                                    @Html.EditorFor(model => model.CantidadMin, new { htmlAttributes = new { @class = "form-control" } })
                                    @Html.ValidationMessageFor(model => model.CantidadMin, "", new { @class = "text-danger" })
                                </div>
                            </div>
                            <!--Max-->
                            <div class="form-group col-lg-12 col-md-12">
                                @Html.LabelFor(model => model.Estado, htmlAttributes: new { @class = "control-label col-lg-3 col-md-3" })
                                <div class="col-lg-9 col-md-8">
                                    @Html.EditorFor(model => model.Estado, new { htmlAttributes = new { @class = "form-control" } })
                                    @Html.ValidationMessageFor(model => model.Estado, "", new { @class = "text-danger" })
                                </div>
                            </div>
                            <!--Boton Actualizar-->
                            <div class="form-group col-lg-12 col-md-12">
                                <div class="col-ld-push-3 col-md-push-3 col-md-10">
                                    <input type="submit" value="Guardar" class="btn btn-primary" />
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    
}



@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
