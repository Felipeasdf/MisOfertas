                            <tr>
                                <td>Puntos</td>
                                <td>Descuento</td>
                                <td>Tope</td>
                                <td>Rubro</td>
                            </tr>
                            <tr>
                                <td>0-100 </td>
                                <td>5%</td>
                                <td>100000</td>
                                <td>Alimentos</td>
                            </tr>
                            <tr>
                                <td>101-500</td>
                                <td>10%</td>
                                <td>150000</td>
                                <td>Alimentos, Electrónica y Línea Blanca</td>
                            </tr>
                            <tr>
                                <td>500-1000</td>
                                <td>15%</td>
                                <td>300000</td>
                                <td>Alimentos, Electrónica, Línea Blanca, Ropa</td>
                            </tr>
                        </tbody>
                    </table>
                </div>               
            </div>
                
            </div>
        </div>        
    </div>



<script>
   
