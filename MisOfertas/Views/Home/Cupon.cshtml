@model CapaDTO.Puntaje

@{
    ViewBag.Title = "Cupon";
}
<br />
<br />
<br />
<div class="container">
    <div class="row">        
        <div class="panel panel-primary">
            <div class="panel-heading">
                <h2>Descuentos Exclusivos</h2>
            </div>
            <div class="panel-body">
                <div class="col-lg-3 col-md-3">
                    <h4>Genere su cupon Cupon</h4>

                    @Html.Label("Puntos acumulados: " + Model.Cantidad)

                    <div id="viewContent">
                        <!--Boton que llama al controlador CREATEPDFCONTROLLER desde el index-->
                        <a href="@Url.Action("GenerarCupon", "Home")" class="btn btn-primary" onclick="refesh()">Generar Cupon</a>

                    </div>
                </div>
                <div class="col-lg-9 col-md-9">
                    <table border="1" style="background-color:white">
